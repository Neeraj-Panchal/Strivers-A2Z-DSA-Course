

class Solution {
	public int countDigit(int n) {
		int count = 0;
		while (n > 0) {
			int num = n % 10;
			count++;
			n = n / 10;
		}
		return count;
	}
	public static void main(String[] args) {
		int n = 4;
		Solution sol = new Solution();
		int result = sol.countDigit(n);
		System.out.println(result);
	}
}
